#!/usr/bin/env zsh

source ~/.zshrc # Load environment variables

xset -b

xrdb ~/.Xresources

xsetroot -solid darkgrey # Set default background color. Will probably be overwritten by the DE/WM.

dbus-update-activation-environment DISPLAY XAUTHORITY

# Monitor setup as generated by arandr. This will probably not work on your machine.
# xrandr --output VGA-1 --mode 1366x768 --pos 519x1080 --rotate inverted --output HDMI-1 --off --output DP-1 --off --output HDMI-2 --off --output DP-2 --mode 2560x1080 --primary --pos 0x0 --rotate normal

exec awesome
